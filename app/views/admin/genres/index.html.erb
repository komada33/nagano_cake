<div class="container mx-auto">

<div class="row bg-secondary">
  <h1>ジャンル一覧・追加</h1>
</div>


<%= form_with model: @genre, url: '/admin/genres', local:true do |f| %>
  <div class="row my-3 py-3">
    <div class="col-2">
      <p>ジャンル名</p>
    </div>

    <div class="col-2"><%= f.text_field :name %></div>
    <div class="col-2"><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></div>
  </div>
<% end %>

<div class="row">
<div class="col">
<table class="table table-borderd">
  <thead class="table-secondary">
    <th class="text-right">ジャンル</th>
    <th></th>
  </thead>

<% @genres.each do |genre| %>
  <tbody>
    <th><%= genre.name %></td>
    <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
  </tbody>
<% end %>
</table>
</div>
<div class="col"></div>
<div class="col"></div>
</div>

</div>