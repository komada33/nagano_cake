<div class="container">
<div class="row">


<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>

<table>
  <tr>
    <td><%= @customer.id %></td>
    <td></td>
  </tr>

   <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>

   <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>

   <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>

   <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>

   <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>

   <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>

   <tr>
    <td>会員ステータス</td>
    <td></td>
  </tr>
</table>

<div>
  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-secondary" %>
  <btn>注文一覧履歴を見る</btn>

</div>

</div>
</div>


