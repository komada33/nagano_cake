
<div class="container mx-auto">

  <h4>商品詳細</h4>

  <div class="row py-3">

    <div class="col-md-4"><%= @item.item_image %></div>

    <div class="col-md-5">

      <div class="row">
        <div class="col"><p>商品名</p></div>
        <div class="col"><%= @item.name %></div>
      </div>

      <div class="row">
        <div class="col"><p>商品説明</p></div>
        <div class="col"><%= @item.introduction %></div>
      </div>

      <div class="row">
        <div class="col"><p>ジャンル</p></div>
        <div class="col"><%= @item.genre.name %></div>
      </div>

      <div class="row">
        <div class="col">
          <div class="row">
            <p>税込価格</p>
            <p>（税抜価格）</p>
          </div>
        </div>
        <div class="col"><%= @item.add_tax_price.to_s(:dalimited) %>（<%= @item.price %>）円</div>
      </div>

      <div class="row">
        <div class="col"><p>販売ステータス</p></div>
        <div class="col"><%= @item.is_active %></div>
      </div>

      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
      </div>
    </div>

    <div class="col-md-3"></div>
  </div>

</div>
