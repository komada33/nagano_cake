<div class="container">

  <div class="row align-items-center my-3 py-3">
    <div class="col">
      <h1>商品一覧</h1>
    </div>

    <div class="col"></div>

    <div class="col text-right">
      <i class="fas fa-plus"></i>
      <%= link_to "+", new_admin_item_path %>
    </div>
  </div>

    <table class="table">


      <thead class="table-secondary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

 <% @items.each do |item| %>
      <tbody>
        <tr>
          <th><%= item.id %></th>
          <th><%= link_to item.name, admin_item_path(item.id) %></th>
          <th><%= item.price %></th>
          <th><%= item.genre.name %></th>
          <th><%= item.is_active %>
      </tbody>
 <% end %>
    </table>



</div>