<div class="container mx-auto my-3">
      <h4>配送先登録/一覧</h4>

      <div class="row py-4">
      <%= form_with model: @address, local:true do |f| %>
        <p>郵便番号（ハイフンなし） <%= f.text_field :postal_code %></p>
        <p>住所 <%= f.text_field :address %></p>
        <p>宛名 <%= f.text_field :name %></p>
      <%= f.submit "新規登録する", class: "btn btn-sm btn-secondary" %>
      <% end %>
      </div>

  <div class="row py-1">
      <table>
          <thead>
            <tr>
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td></td>
          </tr>
        </thead>

      <tbody>
        <%= @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id) %>
            <btn>削除する</btn>
          </td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>