<div class="container py-5">
  <h1>マイページ</h1>

  <div class="row">
    <h2>登録情報</h2>
    <%= link_to "編集する", edit_customer_path(@customer.id) %>
  </div>

  <div class="row">
    <table>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <h2>配送先</h2>
    <btn>一覧を見る</btn>
  </div>

  <div class="row">
    <h2>注文履歴</h2>
    <btn>一覧を見る</btn>
  </div>
</div>