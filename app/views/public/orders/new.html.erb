<div class="container mx-auto py-3">

  <div class="row">
    <h4>支払方法</h4>
    <li>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    </li>
    <li>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    </li>
  </div>

  <div class="row">
    <h4>お届け先</h4>
    <li>
      <%= f.label :current_customer.address, "ご自身の住所" %>
      <%= f.radio_button :current_customer.address, "ご自身の住所" %>
    </li>

    <li>
      <%= f.label :address_id, "登録済住所から選択" %>
      <%= f.radio_button :address_id, "登録済住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.address, :id, :address_display) %>
    </li>
    <li>
      <%= f.label :@address, "新しいお届け先" %>
      <%= f.radio_button :@address, "新しいお届け先" 
      <%= form_with model: @address, local:true do |f| %>
        <p>郵便番号（ハイフンなし） <%= f.text_field :postal_code %></p>
        <p>住所 <%= f.text_field :address %></p>
        <p>宛名 <%= f.text_field :name %></p>
      <%= f.submit "新規登録する", class: "btn btn-sm btn-secondary" %>
      <% end %>
    </li>
  </div>

  <div class="row">
    <btn>確認画面へ</btn>
  </div>
</div>