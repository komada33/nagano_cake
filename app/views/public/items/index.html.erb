<div class="container-py-5">
  <div class="row">

    <div class="col-md-3">
      <nav class="navbar">
        <p>ジャンル検索</p>

      </nav>
    </div>

    <div class="col-md-8">
      <div class="row">
        <h1>商品一覧(全○件)</h1>
      </div>
<% @items.each do |item| %>
      <div class="row">
        <div class="col-md-2">
          <div>
            <div><%= item.item_image %></div>
            <div><%= item.name %></div>
            <div><%= item.add_tax_price.to_s(:dalimited) %></div>
          </div>
        </div>
      </div>
<% end %>
    </div>
  </div>
</div>